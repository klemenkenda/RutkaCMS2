{
    "name": "Pages module",
    "description": "Pages modules takes care about hiearchically ordered pages system; content of the pages can be entered through dedicated GUI. Pages is an essential part of RutkaCMS.",
    "config": [
        {
            "table": "pages",
            "name": "Pages",
            "type": "pages",
            "fields": [
                { "name": "id", "type": "id", "description": "Id", "list": true },
                { "name": "action", "type": "action", "description": "Action", "list": true },
                { "name": "title", "type": "text", "description": "Title", "list": true, "comment": "" },
                { "name": "abstract", "type": "textarea", "description": "Abstract", "list": true, "comment": "" },
                { "name": "content", "type": "richtextarea", "description": "Content", "list": true, "comment": "" }
            ]
        }
    ]
}