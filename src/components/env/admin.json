{
    "name": "Environment vars",
    "description": "Environment variables, that can be accessed server/client side wherever in the plugins or HTML.",
    "config": [
        {
            "table": "env",
            "sort": [
                { "field": "varname", "order": "asc" }
            ],
            "fields": [
                { "name": "id", "type": "id", "description": "Id", "list": true },
